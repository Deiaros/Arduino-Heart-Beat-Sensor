#include "coeur.hpp"
#include "param.hpp"
#include <stdarg.h> // appelle la bibliothéque stdarg.h

void Aleatoire(int led1, int led2, int led3, int led4, int led5, int led6, int led7, int led8, int led9, int led10, float frequence, int aleat) {  // fonction qui allume une led aleatoirement
  aleat = random(1, 11);  // la variable aleat devient un nombre aleatoire compris entre 1 et 10 compris
  if (aleat == 1) {  // si aleat vaut 1 la led 1 s'allume puis s'eteint
    digitalWrite(led1, HIGH);
    delay(frequence);
    digitalWrite(led1, LOW);
    delay(frequence);
  }
  if (aleat == 2) {
    digitalWrite(led2, HIGH);
    delay(frequence);
    digitalWrite(led2, LOW);
    delay(frequence);
  }
  if (aleat == 3) {
    digitalWrite(led3, HIGH);
    delay(frequence);
    digitalWrite(led3, LOW);
    delay(frequence);
  }
  if (aleat == 4) {
    digitalWrite(led4, HIGH);
    delay(frequence);
    digitalWrite(led4, LOW);
    delay(frequence);
  }
  if (aleat == 5) {
    digitalWrite(led5, HIGH);
    delay(frequence);
    digitalWrite(led5, LOW);
    delay(frequence);
  }
  if (aleat == 6) {
    digitalWrite(led6, HIGH);
    delay(frequence);
    digitalWrite(led6, LOW);
    delay(frequence);
  }
  if (aleat == 7) {
    digitalWrite(led7, HIGH);
    delay(frequence);
    digitalWrite(led7, LOW);
    delay(frequence);
  }
  if (aleat == 8) {
    digitalWrite(led8, HIGH);
    delay(frequence);
    digitalWrite(led8, LOW);
    delay(frequence);
  }
  if (aleat == 9) {
    digitalWrite(led9, HIGH);
    delay(frequence);
    digitalWrite(led9, LOW);
    delay(frequence);
  }
  if (aleat == 10) {
    digitalWrite(led10, HIGH);
    delay(frequence);
    digitalWrite(led10, LOW);
    delay(frequence);
  }
}

void DemiCoeur(int led1, int led2, int led3, int led4, int led5, int led6, int led7, int led8, int led9, int led10, float frequence) {  // fonction avec les deux moities du coeur allumés separemment
  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);
  digitalWrite(led3,HIGH);
  digitalWrite(led4, HIGH);
  digitalWrite(led5, HIGH);
  digitalWrite(led6, HIGH);
  digitalWrite(led7, LOW);
  digitalWrite(led8, LOW);
  digitalWrite(led9, LOW);
  digitalWrite(led10, LOW);
  delay(frequence);
  digitalWrite(led2, LOW);
  digitalWrite(led1, LOW);
  digitalWrite(led4, LOW);
  digitalWrite(led3, LOW);
  digitalWrite(led6, LOW);
  digitalWrite(led5, LOW);
  digitalWrite(led8, HIGH);
  digitalWrite(led7, HIGH);
  digitalWrite(led10, HIGH);
  digitalWrite(led9, HIGH);
  delay(frequence);
}

void chenilleunesurdeux(int led1, int led2, int led3, int led4, int led5, int led6, int led7, int led8, int led9, int led10, float frequence) {  // fonctions avec une led sur deux allumees avec rotation
  digitalWrite(led1, HIGH);
  digitalWrite(led2, LOW);
  digitalWrite(led3,HIGH);
  digitalWrite(led4, LOW);
  digitalWrite(led5, HIGH);
  digitalWrite(led6, LOW);
  digitalWrite(led7, HIGH);
  digitalWrite(led8, LOW);
  digitalWrite(led9, HIGH);
  digitalWrite(led10, LOW);
  delay(frequence);
  digitalWrite(led2, HIGH);
  digitalWrite(led1, LOW);
  digitalWrite(led4,HIGH);
  digitalWrite(led3, LOW);
  digitalWrite(led6, HIGH);
  digitalWrite(led5, LOW);
  digitalWrite(led8, HIGH);
  digitalWrite(led7, LOW);
  digitalWrite(led10, HIGH);
  digitalWrite(led9, LOW);
  delay(frequence);
}

void Att(int led1, int led2, int led3, int led4, int led5, int led6, int led7, int led8, int led9, int led10){  // fonction d'attente
